{
    "name": "fiachehr/laravel-comments-pro",
    "description": "Advanced, framework-agnostic comment system for Laravel: nested threads, like/dislike reactions, guests + users, polymorphic to any model, Google reCAPTCHA, moderation, rate limiting.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jafar Pourmojib (Fiachehr)",
            "email": "mailbox@fiachehr.ir"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Fiachehr\\Comments\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fiachehr\\Comments\\CommentsServiceProvider"
            ],
            "aliases": {
                "Comments": "Fiachehr\\Comments\\Facades\\Comments"
            }
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan vendor:publish --provider=\"Fiachehr\\Comments\\CommentsServiceProvider\" --tag=\"comments-config\" --force"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}