{
    "name": "fiachehr/laravel-comments-pro",
    "description": "Production-ready comments system for Laravel: nested threads, reactions, guest & user support, polymorphic models, moderation, rate limiting, reCAPTCHA.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "comments",
        "nested-comments",
        "moderation",
        "reactions",
        "recaptcha"
    ],
    "homepage": "https://github.com/fiachehr/laravel-comments-pro",
    "support": {
        "issues": "https://github.com/fiachehr/laravel-comments-pro/issues",
        "source": "https://github.com/fiachehr/laravel-comments-pro"
    },
    "authors": [
        {
            "name": "Jafar Pourmojib (Fiachehr)",
            "email": "mailbox@fiachehr.ir"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/events": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.5|^11.0",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.15"
    },
    "autoload": {
        "psr-4": {
            "Fiachehr\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fiachehr\\Comments\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fiachehr\\Comments\\CommentsServiceProvider"
            ],
            "aliases": {
                "Comments": "Fiachehr\\Comments\\Facades\\Comments"
            }
        },
        "branch-alias": {
            "dev-main": "0.2-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "format": [
            "@php vendor/bin/pint"
        ]
    }
}